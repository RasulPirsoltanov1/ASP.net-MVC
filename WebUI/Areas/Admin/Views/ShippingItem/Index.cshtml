
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using Core.Entities;
@model IEnumerable<ShippingItem>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Striped Table</h4>
        <p class="card-description">
           <a asp-action="Create">Create Shipping</a>
        </p>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Image
                        </th>
                        <th>
                            Title
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="py-1">
                                <img src="~/assets/images/website-images//@item.Image"
                                 alt="Shipping Icon" />
                            </td>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                <div class="">
                                    <div  >@item.Description</div>
                                </div>
                            </td>
                            <td>
                                <a class="btn btn-info" asp-area="Admin" asp-controller="ShippingItem" asp-action="Update" asp-route-id="@item.Id" >Update</a>
                                <a class="btn btn-primary" asp-area="Admin" asp-controller="ShippingItem" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                                <form style="display:inline;" method="post" asp-action="Delete" asp-area="Admin" asp-controller="ShippingItem" asp-action="Delete" asp-route-id="@item.Id">
                                    <button type="submit" class="btn btn-danger" >Delete</button>
                                </form>
                            </td>
                        </tr>
                    }  
                </tbody>
            </table>
        </div>
    </div>
</div>


@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using WebUI.Areas.Admin.ViewModels.Slider;
@model SlideCreateVM
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Create Shipping</h4>
        <p class="card-description">
            Basic form elements
        </p>
        <form class="forms-sample" method="post" enctype="multipart/form-data" asp-action="Create">
            <div class="form-group">
                <label for="exampleInputName1">Title</label>
                <input type="text" asp-for="Title" class="form-control" id="exampleInputName1" placeholder="Name">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputName1">Offer</label>
                <input type="text" asp-for="Offer" class="form-control" id="exampleInputName1" placeholder="Name">
                <span class="text-danger" asp-validation-for="Offer"></span>
            </div>
            <div class="form-group">
                <label for="exampleTextarea1">Description</label>
                <textarea class="form-control" asp-for="Description" id="exampleTextarea1" rows="4"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label>File upload</label>
                <input asp-for="Photo" class="form-control">
                <span class="text-danger" asp-validation-for="Photo"></span>
            </div>
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <button class="btn btn-light">Cancel</button>
        </form>
    </div>
</div>

